<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HttpRequestsSending.Windows.RemovePage"
             Title="RemovePage">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <ScrollView>
                <VerticalStackLayout
                    Padding="30,0"
                    Spacing="25"
                    VerticalOptions="Center">

                    <Entry x:Name="IdEntry"
                        Placeholder="Id"/>


                    <Button Text="Удалить"
                        Background="Green"
                        TextColor="Gold"
                        />
                </VerticalStackLayout>

            </ScrollView>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>