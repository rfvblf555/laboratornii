<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HttpRequestsSending.MainPage">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Center">

            <Button Text="Добавить продукт"
                Clicked="GoToAddProductPage"
                TextColor="White"/>

            <Button Text="Каталог продуктов" 
            Clicked="GoToShowProductPage" 
            HorizontalOptions="Center" 
            Margin="0, 10"/>

            <Button Text="Поиск продукта" 
            Clicked="GoToShowProductByIdPage" 
            HorizontalOptions="Center" 
            Margin="0, 10"/>

            <Button Text="Обновить информацию о продукте"
                Clicked="GoToUpdateProductPage"
                TextColor="White"/>

            <Button Text="Удалить продукт"
                Clicked="GoToRemoveProductPage"
                TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
