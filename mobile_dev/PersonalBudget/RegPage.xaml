<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalBudget.RegPage"
             Title="RegPage">
    <VerticalStackLayout
        Padding="10,0"
        Spacing="20"
    VerticalOptions="Center">

        <Label Text="Регистрация" 
           HorizontalOptions="Center" 
           FontSize="24"
           Style="{StaticResource LabelStyle1}">
        </Label>

        <Frame>
            <Entry x:Name="UserEmailEntry" 
               Placeholder="Введите почту example@gamil.com"
               Style="{StaticResource EntryStyle}"/>
        </Frame>

        <Frame>
            <Entry x:Name="UserNameEntry"
               Placeholder="Введите имя" />
        </Frame>

        <Frame>
            <Entry x:Name="UserPasswordEntry"
               Placeholder="Введите пароль" />
        </Frame>


        <Button
        x:Name="button1"
        Text="Зарегестрироваться"
        Clicked="RegisterUser"
        Style="{StaticResource StandartButtonStyle}">
        </Button>



    </VerticalStackLayout>
</ContentPage>