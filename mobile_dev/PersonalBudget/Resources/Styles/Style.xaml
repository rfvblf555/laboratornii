<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalBudget.Resources.Styles.Style">

            <Style TargetType="Button" x:Key="StandartButtonStyle">
                <Setter Property="BackgroundColor" Value= "DarkMagenta"/>
                <Setter Property="TextColor" Value="NavajoWhite"/>
            </Style>

            <Style TargetType="Button" BasedOn="{StaticResource StandartButtonStyle}" x:Key="ButtonStyleInRegistration">
                <Setter Property="FontAttributes" Value="Italic"/>
                <Setter Property="BackgroundColor" Value="DarkRed"/>
                <Setter Property="TextColor" Value="WhiteSmoke"/>
                <Setter Property="CornerRadius" Value="20"/>
            </Style>

            <Style TargetType="Border" x:Key="StyleForBorder">
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="Stroke" Value="Black"/>
            </Style>
</ResourceDictionary>