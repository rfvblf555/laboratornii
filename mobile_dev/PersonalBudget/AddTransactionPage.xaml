<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalBudget.AddTransactionPage"
             Title="AddTransactionPage">
    <VerticalStackLayout
        Padding="30,20"
        Spacing="20"
        VerticalOptions="Center">
        <Entry x:Name="TitleEntry" Placeholder="Заголовок траты"/>
        <Editor
            x:Name="DescriptionEntry"
            MinimumHeightRequest="200"
            Placeholder="Описание траты"/>
        <Entry 
            x:Name="AmountEntry"
            Keyboard="Numeric"
            Placeholder="Кол-во потрачено денег"/>
        <Button Clicked="AddTransaction" Text="Добавить"/>
    </VerticalStackLayout>
</ContentPage>